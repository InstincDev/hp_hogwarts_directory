
<h3>Hufflepuff</h3>
    <% if(charData.length != 0) { %>\
        <div class="card">
        <table class="striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            <% charData.forEach( el => { %>
                <tr>
                    <td>
                        <a href="./person/<%=el._id%>">
                        <%= el.name %>
                        </a>
                    </td>
                    <td>
                        <span class="dash-status">
                          <%= el.status %>
                        </span>
                    </td>
                </tr>
            <% }) %>
        </tbody>
        </table>
    <% } else { %>
    <p>You have not added any Characters.</p>
<% } %>
</div>